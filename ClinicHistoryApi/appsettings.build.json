{
  "ConnectionStrings": {
    "IdentityProvider": "#{ConnectionStrings.IdentityProvider}#",
    "IdentityUsers": "#{ConnectionStrings.IdentityUsers}#"
  },
  "ApplicationInsights": {
    "InstrumentationKey": "#{ApplicationInsights.InstrumentationKey}#"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": "#{Serilog.MinimumLevel}#",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "#{Serilog.MSSqlServer.ConnectionString}#",
          "tableName": "IdentityProviderLogs",
          "schemaName": "ita",
          "restrictedToMinimumLevel": "#{Serilog.MSSqlServer.MinimumLevel}#"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "Application": "Ita.IdentityProvider"
    }
  },
  "AppSettings": {
    "SignInLogsTableName": "SignInLogs"
  },
  "EsapiHostname": "#{EsapiHostname}#",
  "IdentityApi": {
    "Hostname": "#{IdentityApi.Hostname}#",
    "Version": "1",
    "Audience": "#{IdentityApi.Audience}#",
    "ClientId": "#{IdentityApi.ClientId}#",
    "LifeTime": 3600
  },
  "Saml": {
    "ID": "ItaServiceProvider",
    "LocalServiceProviderConfiguration": {
      "Name": "ItaServiceProvider",
      "Description": "Ita Service Provider",
      "AssertionConsumerServiceUrl": "#{Saml.AssertionConsumerServiceUrl}#",
      "LocalCertificates": [
        {
          "FileName": "#{Saml.LocalCertificates.FileName}#",
          "Password": "#{Saml.LocalCertificates.Password}#"
        }
      ]
    }
  },
  "SecretServerConfig": {
    "SecretServerUrl": "#{SecretServerConfig.SecretServerUrl}#",
    "SecretName": "#{SecretServerConfig.SecretName}#",
    "SecondsToCacheSecret": "3600"
  },
  "IdentityServerOptions": {
    "DefaultAntiForgeryKeyLifetimeDays": "7"
  },
  "Features": {
    "CreateAndInitializeIdentityDatabase": "#{Features.CreateAndInitializeIdentityDatabase}#",
    "UseDeveloperExceptionPage": "#{Features.UseDeveloperExceptionPage}#",
    "EnforceClientSignatureValidation": "#{Features.EnforceClientSignatureValidation}#",
    "VerifyIfClientCanRequestOnBehalfOfTenant": "#{Features.VerifyIfClientCanRequestOnBehalfOfTenant}#",
    "UseAzureBlobStorageDataProtection": "#{Features.UseAzureBlobStorageDataProtection}#",
    "EnableSameParticipantIdButDifferentAccountNumberBugFix": "#{Features.EnableSameParticipantIdButDifferentAccountNumberBugFix}#",
    "EnableSamlProviders": "#{Features.EnabledSamlProviders}#"
  },
  "SigningCertificate": "#{SigningCertificate}#"
}